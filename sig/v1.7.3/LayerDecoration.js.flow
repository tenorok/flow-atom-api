// -*- mode: javascript; -*- // @flow

import type { DecorationProps } from "./Decoration.js.flow";
import type { TextEditorMarker } from "./TextEditorMarker.js.flow";

declare type LayerDecorationType =
  | "block"
  | "highlight"
  | "line-number"
  | "line"

declare type LayerDecorationProps =
  | DecorationProps & { type: LayerDecorationType }

declare class LayerDecoration {
  destroy(): void;

  isDestroyed(): boolean;

  // FIXME: docs unclear on return type
  getProperties(): LayerDecorationProps;

  setProperties(newProperties: LayerDecorationProps): void;

  setPropertiesForMarker(
    marker: TextEditorMarker,
    properties: Object
  ): void;
}
